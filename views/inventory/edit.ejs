<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=`, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/form.css">
    <title>Edit <%=product.productName%></title>
</head>
<body>
    <%- include('../partials/_nav.ejs') %>
    <%let industry = currentUser.industry%>

    <h1>Edit <%=product.productName%></h1>
    <form action="/users/<%=user._id%>/inventory/<%=product._id%>?_method=put" method="POST">
        <label for="productName">Product Name</label>
        <input type="text" name="productName" value="<%=product.productName%>" required> <br>

        <label for="category">Category</label>
        <select name="category">
            <option value="" disabled selected hidden><span id="default">Select product category</span></option>
            <% if(industry === "technology") { %>
                <option value="Laptops & Computers" <%= product.category === "Laptops & Computers" ? "selected" : "" %>>Laptops & Computers</option>
                <option value="Mobile Phones & Tablets" <%= product.category === "Mobile Phones & Tablets" ? "selected" : "" %>>Mobile Phones & Tablets</option>
                <option value="Smart Home Devices" <%= product.category === "Smart Home Devices" ? "selected" : "" %>>Smart Home Devices</option>
                <option value="Networking Equipment" <%= product.category === "Networking Equipment" ? "selected" : "" %>>Networking Equipment</option>
                <option value="Software & Applications" <%= product.category === "Software & Applications" ? "selected" : "" %>>Software & Applications</option>
                <option value="Wearables" <%= product.category === "Wearables" ? "selected" : "" %>>Wearables</option>
            <%} else if(industry === "fashion") { %>
                <option value="Men Clothing" <%= product.category === "Men Clothing" ? "selected" : "" %>>Men's Clothing</option>
                <option value="Women Clothing" <%= product.category === "Women Clothing" ? "selected" : "" %>>Women's Clothing</option>
                <option value="Kids Wear" <%= product.category === "Kids Wear" ? "selected" : "" %>>Kids Wear</option>
                <option value="Footwear" <%= product.category === "Footwear" ? "selected" : "" %>>Footwear</option>
                <option value="Accessories" <%= product.category === "Accessories" ? "selected" : "" %>>Accessories</option>
                <option value="Jewelry" <%= product.category === "Jewelry" ? "selected" : "" %>>Jewelry</option>
            <%} else if(industry === "food") { %>
                <option value="Fresh Produce" <%= product.category === "Fresh Produce" ? "selected" : "" %>>Fresh Produce</option>
                <option value="Packaged Foods" <%= product.category === "Packaged Foods" ? "selected" : "" %>>Packaged Foods</option>
                <option value="Beverages" <%= product.category === "Beverages" ? "selected" : "" %>>Beverages</option>
                <option value="Dairy Products" <%= product.category === "Dairy Products" ? "selected" : "" %>>Dairy Products</option>
                <option value="Frozen Foods" <%= product.category === "Frozen Foods" ? "selected" : "" %>>Frozen Foods</option>
                <option value="Baked Goods" <%= product.category === "Baked Goods" ? "selected" : "" %>>Baked Goods</option>
            <%} else if(industry === "furniture") { %>
                <option value="Living Room Furniture" <%= product.category === "Living Room Furniture" ? "selected" : "" %>>Living Room Furniture</option>
                <option value="Bedroom Furniture" <%= product.category === "Bedroom Furniture" ? "selected" : "" %>>Bedroom Furniture</option>
                <option value="Kitchen & Dining Furniture" <%= product.category === "Kitchen & Dining Furniture" ? "selected" : "" %>>Kitchen & Dining Furniture</option>
                <option value="Home Decor" <%= product.category === "Home Decor" ? "selected" : "" %>>Home Decor</option>
                <option value="Storage Solutions" <%= product.category === "Storage Solutions" ? "selected" : "" %>>Storage Solutions</option>
                <option value="Outdoor Furniture" <%= product.category === "Outdoor Furniture" ? "selected" : "" %>>Outdoor Furniture</option>
            <%} %>
        </select>

        <!-- <input type="text" name="category" value="<%=product.category%>" required> <br> -->

        <label for="quantity">Quantity</label>
        <input type="number" name="quantity" value="<%=product.quantity%>" required> <br>

        <label for="price">Price</label>
        <input type="number" name="price" value="<%=product.price%>" required> <br>

        <button type="submit">Edit</button>
    </form>
</body>
</html>